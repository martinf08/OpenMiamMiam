{% extends "IsicsOpenMiamMiamBundle::minimal.html.twig" %}

{% block title %}{{ 'login.title'|trans({}, 'seo') }}{% endblock %}
{% block meta_description %}{{ 'login.meta_description'|trans({}, 'seo') }}{% endblock %}

{% block content %}
    <h1>{% trans %}user.login.title{% endtrans %}</h1>

    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <h2>{% trans %}user.login.existing.title{% endtrans %}</h2>

            {% if error %}
                <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label for="username">{{ 'user.login.email.label'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control input-lg" />
                <label for="password">{{ 'user.login.password.label'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control input-lg" />

                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>

                <input type="submit" id="_submit" name="_submit" value="{{ 'user.login.submit'|trans }}" class="btn btn-lg btn-primary btn-block" />

                <a href="{{ path("fos_user_resetting_request") }}">{{ 'user.resetting.request'|trans }}</a>
            </form>
        </div>

        <div class="col-md-4 col-md-offset-2">
            <h2>{% trans %}user.login.new.title{% endtrans %}</h2>

            <a href="{{ path("fos_user_registration_register") }}" class="btn btn-primary btn-lg btn-block">{{ 'user.login.register'|trans }}</a>
        </div>
    </div>
{% endblock content %}
